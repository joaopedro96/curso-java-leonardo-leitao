package lambda.desafio;

import java.util.function.Function;
import java.util.function.UnaryOperator;

import oo.desafio.Produto;

public class Desafio {
	
	public static void main(String[] args) {
		
		Produto p1 = new Produto("iPad", 3235.9, 0.13);
		
		
		
		Function<Produto, Double> precoFinal = produto -> produto.getPrice() * produto.getDiscount(); 
		
		System.out.printf("Valor total: R$%.2f", precoFinal.apply(p1));

		
		
		UnaryOperator<Double> impostoTotal = precoTotal -> precoTotal > 2500 ? precoTotal * 0.08 : 0;
		System.out.printf("Imposto total: R$%.2f", impostoTotal.apply(p1.getPrice()));
		
	}
	
}
